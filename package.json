    },
    "catalogs": {
      "dev": {
        "@tailwindcss/vite": "^4.1.14",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.1",
        "@vitejs/plugin-react": "^5.0.4",
        "babel-plugin-react-compiler": "^1.0.0",
        "drizzle-kit": "^0.31.4",
        "typescript": "^5.9.3",
        "vite": "^7.1.9",
        "vite-tsconfig-paths": "^5.1.4"
      },
      "frontend": {
        "@base-ui-components/react": "^1.0.0-beta.4",
        "@tanstack/react-form": "^1.23.0",
        "drizzle-orm": "^0.44.4",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
      },
      "server": {
        "drizzle-orm": "^0.44.4"
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
