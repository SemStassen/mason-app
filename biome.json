{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "correctness": {
        "noChildrenProp": "off",
        "noNestedComponentDefinitions": "off"
      },
      "complexity": {
        "noExcessiveLinesPerFunction": {
          "level": "off",
          "options": {
            "maxLines": 100
          }
        },
        "noExcessiveCognitiveComplexity": {
          "level": "warn",
          "options": {
            "maxAllowedComplexity": 50
          }
        }
      },
      "style": {
        "useConsistentArrayType": {
          "level": "warn",
          "options": {
            "syntax": "generic"
          }
        },
        "useConsistentObjectDefinitions": "off",
        "noMagicNumbers": "off",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noShadowRestrictedNames": {
          "level": "info",
          "options": {}
        }
      },
      "nursery": {
        "useMaxParams": {
          "level": "warn",
          "options": {
            "max": 4
          }
        }
      }
    }
  }
}
