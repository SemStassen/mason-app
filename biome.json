{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "complexity": {
        "noExcessiveLinesPerFunction": {
          "options": {
            "maxLines": 100
          }
        },
        "noExcessiveCognitiveComplexity": {
          "options": {
            "maxAllowedComplexity": 50
          }
        }
      },
      "style": {
        "useConsistentArrayType": {
          "options": {
            "syntax": "generic"
          }
        },
        "useConsistentObjectDefinitions": "off",
        "noMagicNumbers": "off"
      },
      "nursery": {
        "useMaxParams": {
          "options": {
            "max": 4
          }
        }
      }
    }
  }
}
